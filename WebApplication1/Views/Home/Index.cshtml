@using System.Data
@model TimezoneResponsePaginationModel;


<h2>Hiển Thị Danh Sách Múi Giờ</h2>

<div id="btnContainer">
    <button class="btn" onclick="listView()"><i class="fa fa-bars"></i> List</button>
    <button class="btn active" onclick="gridView()"><i class="fa fa-th-large"></i> Grid</button>
    <select name="province" id="province">
        @foreach (TimezoneResponseModel row in Model.Content)
        {
            <option value="@row.Id"> <a href="@Url.Action("DetailTimeZone", "Home", new { @code = row.Code })">
            <h2>@row.Name</h2>
            </a></option>
        }
    </select>
</div>
<br>

<div class="row">
    @foreach (TimezoneResponseModel row in Model.Content)
        {
        <div class="column">
            <a href="@Url.Action("DetailTimeZone", "Home", new { @code = row.Code })">
            <h2>@row.Name</h2>
            </a>
            <p>@row.Description</p>
            <p>@row.CreatedOnDate</p>
        </div>
        }
</div>

